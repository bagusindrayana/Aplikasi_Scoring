<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A"
    android:padding="2dp"
    tools:context=".CustomKeyboard">

    <!-- Main keyboard grid layout -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/keyboard_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/side_buttons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:columnCount="4"
        app:rowCount="3"
        android:layout_marginEnd="5dp">

        <!-- Keyboard buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_x"
            style="@style/ModernKeyboardButtonStyle"
            android:text="X"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:textColor="#FF5252"
            app:backgroundTint="#333333"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/ModernKeyboardButtonStyle"
            android:text="10"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="none"

            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            style="@style/ModernKeyboardButtonStyle"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            style="@style/ModernKeyboardButtonStyle"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <!-- Baris 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            style="@style/ModernKeyboardButtonStyle"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            style="@style/ModernKeyboardButtonStyle"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/ModernKeyboardButtonStyle"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            style="@style/ModernKeyboardButtonStyle"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <!-- Baris 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            style="@style/ModernKeyboardButtonStyle"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            style="@style/ModernKeyboardButtonStyle"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            style="@style/ModernKeyboardButtonStyle"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_m"
            style="@style/ModernKeyboardButtonStyle"
            android:text="M"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:textColor="#4CAF50"
            app:backgroundTint="#333333"
            app:cornerRadius="12dp" />

    </androidx.gridlayout.widget.GridLayout>

    <!-- Right keyboard section (Enter and Backspace) -->
    <LinearLayout
        android:id="@+id/side_buttons"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Backspace button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_backspace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            app:icon="@drawable/backspace"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#444444" />

        <!-- Enter button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_enter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:icon="@drawable/return_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#4285F4" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
