<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarTitle">
        <item name="android:fontFamily">@font/sigmar_reguler</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomArrowBack">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomKeyboard">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="KeyboardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">#444444</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ModernKeyboardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#2D2D2D</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>
</resources>